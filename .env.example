# -------------------------------------------------------------------------
# Application Configuration
# -------------------------------------------------------------------------
APP_NAME="Meta Solution Partner"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Note: When APP_ENV=local, auto-login feature is enabled on login page
# This allows bypassing OTP verification for faster development workflow

# Timezone and Locale
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# -------------------------------------------------------------------------
# Logging Configuration
# -------------------------------------------------------------------------
# Options: stack, single, daily, slack, papertrail, stderr, syslog, errorlog
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Slack Logging (Optional)
LOG_SLACK_WEBHOOK_URL=
LOG_SLACK_USERNAME="Laravel Log"
LOG_SLACK_EMOJI=":boom:"

# Papertrail Logging (Optional)
PAPERTRAIL_URL=
PAPERTRAIL_PORT=

# -------------------------------------------------------------------------
# Database Configuration
# -------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=whatsapp_saas
DB_USERNAME=root
DB_PASSWORD=
DB_SOCKET=
DB_FOREIGN_KEYS=true

# -------------------------------------------------------------------------
# Cache & Session & Queue
# -------------------------------------------------------------------------
BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Session configuration
SESSION_CONNECTION=
SESSION_TABLE=sessions
SESSION_STORE=
SESSION_SECURE_COOKIE=
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false

# -------------------------------------------------------------------------
# Redis Configuration
# -------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_URL=
REDIS_PREFIX=

# -------------------------------------------------------------------------
# Memcached Configuration (Optional)
# -------------------------------------------------------------------------
MEMCACHED_HOST=127.0.0.1

# -------------------------------------------------------------------------
# Mail Configuration
# -------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Postmark (if MAIL_MAILER=postmark)
POSTMARK_API_KEY=

# Resend (if MAIL_MAILER=resend)
RESEND_API_KEY=

# -------------------------------------------------------------------------
# AWS Configuration
# -------------------------------------------------------------------------
# Used for S3, SES, SQS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_URL=
AWS_ENDPOINT=

# -------------------------------------------------------------------------
# Broadcasting (Reverb)
# -------------------------------------------------------------------------
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST="localhost"
REVERB_PORT=8080
REVERB_SCHEME=http

REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_SERVER_PATH=
REVERB_MAX_REQUEST_SIZE=10000
REVERB_SCALING_ENABLED=false
REVERB_SCALING_CHANNEL=reverb
REVERB_PULSE_INGEST_INTERVAL=15
REVERB_TELESCOPE_INGEST_INTERVAL=15
REVERB_APP_PING_INTERVAL=60
REVERB_APP_ACTIVITY_TIMEOUT=30
REVERB_APP_MAX_CONNECTIONS=
REVERB_APP_MAX_MESSAGE_SIZE=10000

# -------------------------------------------------------------------------
# Broadcasting (Pusher / Ably)
# -------------------------------------------------------------------------
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

ABLY_KEY=

# -------------------------------------------------------------------------
# Vite
# -------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# -------------------------------------------------------------------------
# Services: Meta (WhatsApp & Facebook)
# -------------------------------------------------------------------------
# Configuration for Tech Provider / Solution Partner
# Verification token for webhooks (Login for Business, WhatsApp Cloud API)
WHATSAPP_VERIFY_TOKEN=your-random-verification-token

# Meta App Secret (for verifying webhook signatures)
WHATSAPP_APP_SECRET=

# Meta Graph API Version (e.g., v21.0)
WHATSAPP_API_VERSION=v21.0
WHATSAPP_BASE_URL=https://graph.facebook.com

# Facebook App Credentials (for Login for Tech Providers)
FACEBOOK_APP_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI="${APP_URL}/auth/facebook/callback"

# -------------------------------------------------------------------------
# Services: Slack Notifications
# -------------------------------------------------------------------------
SLACK_BOT_USER_OAUTH_TOKEN=
SLACK_BOT_USER_DEFAULT_CHANNEL=
